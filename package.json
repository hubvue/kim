{
  "name": "@kever/monorepo",
  "private": true,
  "version": "0.25.9",
  "module": "true",
  "description": "A lightweight inversion of control container for Node.js apps powered by TypeScript and Koa runtime",
  "scripts": {
    "build": "esmo ./scripts/build.ts",
    "build:all": "esmo ./scripts/build.ts --all",
    "format": "eslint --fix . --ext .js,.ts",
    "test": "mocha --require ts-node/register ./packages/**/test/*.spec.ts",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s && git add ./CHANGELOG.md",
    "ci": "bumpp package.json packages/*/package.json --commit --push --tag",
    "release": "run-s build:all format ci"
  },
  "publishConfig": {
    "directory": "packages/*"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.3.6",
    "@commitlint/config-conventional": "^8.3.6",
    "@microsoft/api-extractor": "^7.36.3",
    "@types/mocha": "^7.0.2",
    "@types/node": "^14.18.54",
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "@typescript-eslint/parser": "^4.33.0",
    "bumpp": "^7.2.0",
    "chalk": "^4.1.2",
    "conventional-changelog-cli": "^2.2.2",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-prettier": "^3.4.1",
    "esmo": "^0.14.1",
    "execa": "^4.1.0",
    "inquirer": "^7.3.3",
    "lint-staged": "^10.5.4",
    "minimist": "^1.2.8",
    "mocha": "^7.2.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.8.8",
    "reflect-metadata": "^0.1.13",
    "rollup": "^2.79.1",
    "rollup-plugin-typescript2": "^0.31.2",
    "supertest": "^4.0.2",
    "tsup": "^7.2.0",
    "typescript": "^5.1.6"
  },
  "lint-staged": {
    "{src, test, example}/**/*.ts": [
      "npm run format",
      "prettier --write",
      "git add ."
    ],
    "{lib}/**/*.js": [
      "npm run format",
      "prettier --write",
      "git add ."
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  }
}
